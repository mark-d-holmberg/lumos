- title @campaign.name

.container
  .row
    .col-lg-6
      .c-name= @campaign.campaignable.to_s
      .c-location= @campaign.formatted_address
      .c-location2= @campaign.school.to_s

      %h5.page-header Contribute
      = simple_form_for :impression, url: campaign_landing_impressions_url(@campaign.to_param), method: :post, html: { class: "inline-search-form form form-inline" }, wrapper: :inline do |f|
        = f.error_notification

        = f.input :email, as: :string, wrapper: :inline
        = f.input :referral_kind, as: :hidden, input_html: { value: params.try(:[], :synd) }

        .form-group
          .col-sm-offset-2.col-sm-10
            = f.button :submit, 'Contribute', class: 'btn btn-primary'

    .col-lg-6.c-graphs
      = image_tag(Gchart.pie_3d(data: [0,100], slice_colors: '00d6ea,cfd0d0', title: 'Goal vs. Raised', size: '400x200', labels: ['Raised', 'Goal']))

.container.funds
  .row
    .c-funds
      .c-funds-goal Goal: #{humanized_money_with_symbol(@campaign.goal_amount.dollars, no_cents_if_whole: false)}
      .c-funds-raised Raised: $0

