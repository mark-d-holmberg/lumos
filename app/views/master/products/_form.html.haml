= simple_form_for(@product) do |f|
  = f.error_notification

  = f.input :name
  = f.input :description, as: :text
  = f.input :price_dollars, required: true do
    = f.input_field :price_dollars, value: @product.new_record? ? number_with_precision(1.00, precision: 2) : number_with_precision(@product.price.dollars, precision: 2), class: "price-dollars", as: :string

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.button :submit, class: 'btn btn-primary'
      = link_to 'Cancel', products_path, class: 'btn btn-link'
