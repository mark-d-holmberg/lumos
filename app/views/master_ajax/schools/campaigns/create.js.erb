<% if @campaign.valid? %>
  $('form#new_campaign').remove();
  $(".modal").modal('hide');
  $("table#school_based_campaigns_table").append('<%= j render(partial: "master_ajax/schools/campaigns/campaign", locals: { campaign: @campaign }) %>');
<% else %>
  $('form#new_campaign').replaceWith('<%= j render("form") %>');
<% end %>
$(".flash-message").html('<%= j render("shared/flash_messages") %>');
